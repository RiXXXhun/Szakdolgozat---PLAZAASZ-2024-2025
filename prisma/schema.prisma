generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Support {
  id        Int      @id @default(autoincrement())
  fullName  String
  email     String
  phone     String
  message   String @db.VarChar(1000) 
  createdAt DateTime @default(now())
}


model User {
  id                   Int    @id @default(autoincrement())
  username             String @unique
  email                String @unique
  password             String
  securityQuestionAnswer String
  createdAt            DateTime @default(now())
}

model Admin {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
}

model Coupon {
  id            Int      @id @default(autoincrement())
  qrCode        String
  discount      String
  validFrom     DateTime
  validUntil    DateTime
  usageDetails  String
  storeId       Int      
  store         Store    @relation(fields: [storeId], references: [id])
  createdAt     DateTime @default(now())
}

model Store {
  id        Int      @id @default(autoincrement())
  name      String   @unique    // Itt állítjuk be, hogy a name mező unique legyen
  coupons   Coupon[] 
  createdAt DateTime @default(now())
}
